{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "textlint-rule-spellchecker configuration",
  "oneOf": [{
    "title": "Enable this rule with default options",
    "type": "boolean"
  }, {
    "type": "object",
    "properties": {
      "severity": {
        "title": "Severity of lint messages",
        "type": "string",
        "enum": ["error", "warning", "info"],
        "default": "error"
      }
    }
  }]
}
