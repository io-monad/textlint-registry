{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "textlint-rule-ng-word configuration",
  "oneOf": [{
    "title": "Enable this rule with default options",
    "type": "boolean"
  }, {
    "type": "object",
    "properties": {
      "words": {
        "title": "NG words",
        "type": "array",
        "items": {
          "title": "NG word",
          "type": "string",
          "minLength": 1
        },
        "uniqueItems": true
      },
      "severity": {
        "title": "Severity of lint messages",
        "type": "string",
        "enum": ["error", "warning", "info"],
        "default": "error"
      }
    }
  }]
}
